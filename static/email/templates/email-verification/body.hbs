{{> header title="Verify Your Email Address" }}

<mj-section background-color="#fafafa">
    <mj-column>
        <mj-text color="#525252">
            Thanks for joining Boardrush. Click the button below to verify your email address and complete the registration process:
        </mj-text>

        <mj-button font-family="Helvetica"
                   background-color="#9E2E3A"
                   color="white"
                   href="{{ verifyEmailAddressUrl }}?token={{ verificationToken }}">
        Verify
        </mj-button>
    </mj-column>
</mj-section>


{{> footer }}